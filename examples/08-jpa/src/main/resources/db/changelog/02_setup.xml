<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
  <changeSet author="philipp.moisel" id="setup">

    <addPrimaryKey tableName="customer" columnNames="id"/>

    <createTable
      tableName="order">
      <column name="id" type="NUMBER">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="customer_id" type="int">
        <constraints foreignKeyName="fk_o_c" referencedTableName="customer" referencedColumnNames="id"/>
      </column>
      <column name="datum" type="timestamp"/>
    </createTable>

  </changeSet>
</databaseChangeLog>